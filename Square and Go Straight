
const int INK_SPEED = 1;
const int RACK_SPEED = 10;
const int SQR_SIDE_LEN = 50;

// 15 degrees = 1 mm with our rack + pinion

void drawRect(int length, int width);
{
	motor[motorC] = INK_SPEED;
	
	go_straight((int)motorA, width);
	go_straight((int)motorB, length);
	go_straight((int)motorA, (-width));
	go_straight((int)motorB, (-length));
	
	motor[motorC] = INK_SPEED;
}
	
	
void go_straight(tMotor sideMotor, int sideLen)
{
	if (sideLen > 0)
		motor[sideMotor] = RACK_SPEED;
	else
		motor[sideMotor] = -RACK_SPEED;
	
	int sideDegrees = sideLen * 15;
	int currentEncoderVal = nMotorEndcoder[sideMotor];
		
	while (abs(nMotorEncoder[sideMotor] - currentEncoderVal) < abs(sideDegrees))
	{}
	motor[sideMotor] = 0;
}
	
